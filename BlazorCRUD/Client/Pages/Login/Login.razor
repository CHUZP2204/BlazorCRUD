@page "/login"
@inject HttpClient httpClient
@inject NavigationManager navManager
@using BlazorCRUD.Shared


<h3>Login</h3>

<div class="row mt-5">
    <div class="col-lg-4 offset-lg-4 border">
        <div class="mb-3 text-center">
            <h3>LOGIN</h3>
        </div>
        <div class="mb-3">
            <label>Correo</label>
            <input @bind="login.Correo" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Contrasenia</label>
            <input @bind="login.Clave" class="form-control" />
        </div>
        <div class="mb-3">
            <button @onclick="IniciarSesion" class="btn btn-primary">Login</button>
        </div>
    </div>
</div>

@code {
    private LoginClase login = new LoginClase();

    private async Task IniciarSesion()
    {
        var loginResponse = await httpClient.PostAsJsonAsync<LoginClase>("/api/Usuario/Login", login);

        if (loginResponse.IsSuccessStatusCode)
        {
            var sesionUsuario = await loginResponse.Content.ReadFromJsonAsync<LoginClase>();
            //var autenticacionExt = (AutenticacionExtension)autenticacionProvider;
            //await autenticacionExt.ActualizarEstadoAutenticacion(sesionUsuario);

            navManager.NavigateTo("/Index");
        }
    }
}